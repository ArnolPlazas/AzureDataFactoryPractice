{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adfarnolproject"
		},
		"la_sql_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'la_sql'"
		},
		"ls_datalake_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ls_datalake'"
		},
		"ls_datalake2_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_datalake2'"
		},
		"la_sql_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "server-db-adf.database.windows.net"
		},
		"la_sql_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "db-adf"
		},
		"la_sql_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "adminarnol"
		},
		"ls_datalake2_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://asaarnoladf.dfs.core.windows.net/"
		},
		"ls_rick_and_morty_api_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://rickandmortyapi.com/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adfarnolproject_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"la_sql_password": {
						"value": "[parameters('la_sql_password')]"
					},
					"ls_datalake_connectionString": {
						"value": "[parameters('ls_datalake_connectionString')]"
					},
					"ls_datalake2_accountKey": {
						"value": "[parameters('ls_datalake2_accountKey')]"
					},
					"la_sql_properties_typeProperties_server": {
						"value": "[parameters('la_sql_properties_typeProperties_server')]"
					},
					"la_sql_properties_typeProperties_database": {
						"value": "[parameters('la_sql_properties_typeProperties_database')]"
					},
					"la_sql_properties_typeProperties_userName": {
						"value": "[parameters('la_sql_properties_typeProperties_userName')]"
					},
					"ls_datalake2_properties_typeProperties_url": {
						"value": "[parameters('ls_datalake2_properties_typeProperties_url')]"
					},
					"ls_rick_and_morty_api_properties_typeProperties_url": {
						"value": "[parameters('ls_rick_and_morty_api_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "adfarnolproject_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'adfarnolproject_ArmTemplate_0')]"
			]
		}
	]
}